package components

templ Section(title string, description string) {
	<section class=" text-lg px-10 py-7 bg-white rounded-2xl flex flex-col gap-4 shadow md:w-1/2 w-full">
		<h2 class="text-2xl font-semibold">
			{ title }
		</h2>
		<p class="text-gray-500 text-sm">
			{ description }
		</p>
		{ children... }
	</section>
}
